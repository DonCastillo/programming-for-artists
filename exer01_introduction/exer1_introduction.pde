// set the initial size of the window (in px)
size(400, 400);

// set initial background color of the window
background(255,0,0);

// set stroke weight, cascades down to all shapes
strokeWeight(10);

point(30, 40);

// set stroke color
stroke(21, 153, 175);

line(20, 20, 60, 70);

strokeWeight(1);

// resets fill color to all subsequent shapes
noFill();

// set fill color of the rectangle
fill(0, 255, 0);
rect(140, 150, 30, 50);

// set stroke and fill color of the circle
stroke(255, 228, 15);
fill(0, 0, 255);
ellipse(310, 240, 30, 30);
